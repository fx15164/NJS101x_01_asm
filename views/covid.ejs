<%- include('./includes/head.ejs') %>
    <div class="container">
        <div>
            <h4>Đăng ký thân nhiệt</h4>
            <form action="/nhietdo" method="post">
                <div class="form-group">
                    <label for="temperature">Temperature</label>
                    <input class="form-control" type="number" name="temperature" id="temperature" />
                </div>
                <button class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="mt-4">
            <h4>Đăng ký thông tin Vacine</h4>
            <form action="/vacine" method="post">
                <div class="form-group">
                    <label for="first">Mũi 1</label>
                    <input class="form-control" type="text" name="first" id="first" />
                </div>
                <div class="form-group">
                    <label for="first-date">Ngày tiêm mũi 1</label>
                    <input class="form-control" type="date" name="firstdate" id="first-date" />
                </div>
                <div class="form-group">
                    <label for="second">Mũi 2</label>
                    <input class="form-control" type="text" name="second" id="second" />
                </div>
                <div class="form-group">
                    <label for="second-date">Ngày tiêm mũi 2</label>
                    <input class="form-control" type="date" name="seconddate" id="second-date" />
                </div>
                <button class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="my-4">
            <h4>Đăng ký dương tính Covid 19</h4>
            <form action="/trangthai" method="post">
                <div class="form-group">
                    <label for="status">Trạng thái</label>
                    <select class="form-control" name="status" id="status">
                        <option value="1">Dương tính</option>
                        <option value="0">Âm tính</option>
                    </select>
                </div>
                <button class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <%- include('./includes/end.ejs') %>